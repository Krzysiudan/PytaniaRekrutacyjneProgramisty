<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityLanguageChoose"
android:background="@drawable/backgroundsmaller">

    <TextView

            android:text="@string/wybierz_jezyk"
            android:background="@color/colorPrimary"
    android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_language_choose"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="30sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="30dp"
            android:textAllCaps="true" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:contentDescription="@string/java_button"
            android:layout_width="212dp"
            android:layout_height="94dp" app:srcCompat="@drawable/ic_javalogo"
            android:id="@+id/imageButtonJava"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>